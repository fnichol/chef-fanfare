<% if node['rbenv'] && node['rbenv']['root_path'] -%>
if [ -z "$PS1" ] ; then
  if [ -s "${HOME}/.rbenv/bin" ]; then
    export PATH="$HOME/.rbenv/shims:$HOME/.rbenv/bin:$PATH"
    elif [ -s "<%= node['rbenv']['root_path'] %>/bin" ] ; then
    export PATH="<%= node['rbenv']['root_path'] %>/shims:<%= node['rbenv']['root_path'] %>/bin:$PATH"
  fi
fi
<% end -%>
